<!DOCTYPE html>
<html>
<head>
  <title>Bookstore</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<div id="columns">
  <div id = "side">
    <div id = "cart">
      <% if @cart %>
        <%= render @cart %>
      <% end %>

    </div>
  </div>

    <div id = "main">

    <%= yield %>
    </div>
</div>
</body>
</html>
